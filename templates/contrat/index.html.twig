{% extends 'base.html.twig' %}

{% block title %}Contrat index{% endblock %}

{% block body %}
    <h1>Contrat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdContrat</th>
                <th>TypeContrat</th>
                <th>Salaire</th>
                <th>SateEmbauche</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contrat in contrats %}
            <tr>
                <td>{{ contrat.idContrat }}</td>
                <td>{{ contrat.typeContrat }}</td>
                <td>{{ contrat.salaire }}</td>
                <td>{{ contrat.sateEmbauche ? contrat.sateEmbauche|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_contrat_show', {'idContrat': contrat.idContrat}) }}">show</a>
                    <a href="{{ path('app_contrat_edit', {'idContrat': contrat.idContrat}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contrat_new') }}">Create new</a>
{% endblock %}
