{% extends 'admin.html.twig' %}

{% block title %}User index{% endblock %}
{% block pageName %}User{% endblock %}
{% block body %}
    <section style="margin-left: 2em;margin-right: 2em">
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Cin</th>
                <th>UrlPhoto</th>
                <th>DateDeNaissance</th>
                <th>NumTel</th>
                <th>DateEmbauche</th>
                <th>Grade</th>
                <th>Equipe</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.cin }}</td>
                <td>{{ user.urlPhoto }}</td>
                <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.numTel }}</td>
                <td>{{ user.dateEmbauche ? user.dateEmbauche|date('Y-m-d') : '' }}</td>
                <td>{{ user.grade }}</td>
                <td>{{ user.equipe }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'iduser': user.iduser}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'iduser': user.iduser}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
    </section>
{% endblock %}
