{% block title %}Modifier Profil de {{  app.user.nom }}{% endblock %}

{% block body %}
    <section style="margin-left: 2em">
    <h1>Modifier Profil de {{  app.user.nom }}</h1>

    {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

    {%  if app.user.role is same as 'ROLE_ADMIN' %}
    <a href="{{ path('app_user_index') }}">back to list</a>

    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
    </section>
{% endblock %}
