                            </ul>
                        </li>
                        <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
                    </ul>
                    <i class="bi bi-list mobile-nav-toggle"></i>
                </nav><!-- .navbar -->

                <a href={{ path("app_login")}} class="get-started-btn scrollto">Login</a>

            </div>
        </header><!-- End Header -->
    {% endblock %}
    <br>
    <br>
    <br>
    {% block body %}
        {{ include('base.html.twig') }}
    {% endblock %}
    {{ include('footer.html.twig') }}
