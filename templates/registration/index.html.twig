{% extends 'base.html.twig' %}

{% block title %}registration{% endblock %}

{% block body %}
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">



                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Créer un compte</h5>
                                    <p class="text-center small">Entrez vos informations personnelles pour créer un compte</p>
                                </div>


                                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                                <div class="col-12">
                                    <label for="yourName" class="form-label">Votre Nom</label>

                                    <div class="invalid-feedback">S'il vous plaît entrez votre nom!</div>
                                    {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}

                                </div>

                                <div class="col-12">
                                    <label for="yourPrenom" class="form-label">Votre Prenom</label>

                                    <div class="invalid-feedback">S'il vous plaît entrez votre Prenom!</div>
                                    {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}

                                </div>

                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">Votre e-mail</label>
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">Veuillez saisir une adresse e-mail valide!</div>
                                </div>

                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">Votre CIN</label>
                                    {{ form_widget(form.cin,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">S'il vous plaît entrez votre CIN</div>
                                </div>

                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">Votre dateDeNaissance</label>
                                    {{ form_widget(form.dateDeNaissance) }}
                                    <div class="invalid-feedback">S'il vous plaît entrez votre date De Naissance</div>
                                </div>

                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">Votre Url photo</label>
                                    {{ form_widget(form.urlPhoto,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">S'il vous plaît entrez votre Url photo</div>
                                </div>

                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">Votre numéro de téléphone</label>
                                    {{ form_widget(form.numTel,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">S'il vous plaît entrez votre numéro de téléphone</div>
                                </div>

                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">Password</label>
                                    {{ form_widget(form.mdp.first,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">S'il vous plaît entrez votre mdp!</div>
                                </div>

                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">Confirm Password</label>
                                    {{ form_widget(form.mdp.second,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">Please confirm your mdp!</div>
                                </div>
                                <br>

                                {# <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms" required="">
                                        <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms and conditions</a></label>
                                        <div class="invalid-feedback">You must agree before submitting.</div>
                                    </div>
                                </div> #}
                                <div class="col-12">
                                    <button  type="submit">Create Account</button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0">Already have an account? <a href="{{ path('app_login') }}">Log in</a></p>
                                </div>
                                {{ form_end(form) }}

                            </div>
                        </div>

                        <div class="credits">
                            <!-- All the links in the footer should remain intact. -->
                            <!-- You can delete the links only if you purchased the pro version. -->
                            <!-- Licensing information: https://bootstrapmade.com/license/ -->
                            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
                            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>
{% endblock %}
